<% include header.ejs %>
<link rel="stylesheet" href="../stylesheets/base.css">
<link rel="icon" href="../images/logo.icon.png">

<!--博客内容-->
<div class="blog">
    <div class="blog-container">
        <!--文章列表 start-->
        <div class="article-left">
            <!--1-->
            <div class="article-list">
                <!--标题-->
                <div class="article-list-title"><h2><%= post.title %></h2></div>
                <!--提示信息-->
                <div class="article-list-tips">
                    <ul>
                        <li><span>日期：</span><span><%= post.date %></span></li>
                        <li><span>作者：</span><span><%= post.name %></span></li>
                        <li><span>类型：</span><span><%= post.category %></span></li>
                        <li><span>浏览：</span><span><%= post.pv %></span></li>
                    </ul>
                </div>
                <!--内容-->
                <div class="article-list-info">
                    <span><%= post.post %></span>
                </div>
            <div class="hr-40"></div>
            <div class="underline"></div>
            <div class="hr-40"></div>
            <!-- UY BEGIN -->
            <div id="uyan_frame"></div>
            <script type="text/javascript" src="http://v2.uyan.cc/code/uyan.js?uid=2095106"></script>
            <!-- UY END -->
            </div>
        </div>
        <!--文章列表 end-->
    </div>
</div>

<% include footer.ejs %>
